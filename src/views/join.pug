extends base

block content
  h1 Create a new account
  if errorMessage
    p=errorMessage
  form(method='post')
    input(type="text" name="name" placeholder='이름 ex) 홍길동' required)
    input(type="text" name="username" placeholder='닉네임' required)
    input(type="email" name="email" placeholder='이메일' required)
    input(type="password" name="password" placeholder='비밀번호' maxlength='16' required )
    input(type='submit', value='Sign up')